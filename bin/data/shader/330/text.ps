#version 330 core
out vec4 frag_color;

in vec4 out_position;
in vec2 out_texcoord;

uniform sampler2D in_texture;
uniform vec4 in_color;

void main()
{
	frag_color = texture(in_texture, out_texcoord);
	frag_color.g = frag_color.r;
	frag_color.b = frag_color.r;
	frag_color.a = frag_color.r;
	frag_color = in_color*frag_color;
}